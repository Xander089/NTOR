<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/detail_bkg"
    app:layout_constraintGuide_percent="0.33"
    tools:context=".presentation.main.progress.detail.RunDetailFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/icon_green"
        android:theme="@style/AppTheme.Toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back"
        app:title="Run" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/materialCardView2"
        app:layout_constraintTop_toBottomOf="@+id/topAppBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.33" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.66" />

            <TextView
                android:id="@+id/activitiesTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="0"
                android:textColor="@color/text_timer"
                android:textSize="34sp"
                app:layout_constraintBottom_toTopOf="@+id/activitiesLabel"
                app:layout_constraintEnd_toEndOf="@+id/activitiesLabel"
                app:layout_constraintStart_toStartOf="@+id/activitiesLabel" />

            <TextView
                android:id="@+id/runLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Activity"
                android:textAllCaps="false"
                android:textColor="@color/text_timer"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/timeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="@color/text_timer"
                android:textSize="34sp"
                app:layout_constraintBottom_toBottomOf="@+id/activitiesTextView"
                app:layout_constraintEnd_toEndOf="@+id/totalTimeLabel"
                app:layout_constraintStart_toStartOf="@+id/totalTimeLabel" />

            <TextView
                android:id="@+id/distanceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance"
                android:textAllCaps="false"
                android:textColor="@color/list_secondary_text"
                app:layout_constraintBottom_toBottomOf="@+id/totalTimeLabel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline4"
                app:layout_constraintTop_toTopOf="@+id/totalTimeLabel" />

            <TextView
                android:id="@+id/activitiesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Activities"
                android:textAllCaps="false"
                android:textColor="@color/list_secondary_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline3"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/distanceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0,0"
                android:textColor="@color/text_timer"
                android:textSize="34sp"
                app:layout_constraintBottom_toBottomOf="@+id/activitiesTextView"
                app:layout_constraintEnd_toEndOf="@+id/distanceLabel"
                app:layout_constraintStart_toStartOf="@+id/distanceLabel" />

            <TextView
                android:id="@+id/totalTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textAllCaps="false"
                android:textColor="@color/list_secondary_text"
                app:layout_constraintBottom_toBottomOf="@+id/activitiesLabel"
                app:layout_constraintEnd_toStartOf="@+id/guideline4"
                app:layout_constraintStart_toStartOf="@+id/guideline3"
                app:layout_constraintTop_toTopOf="@+id/activitiesLabel" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView3">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.16" />

            <ImageView
                android:id="@+id/iconPacing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_pacing"
                app:layout_constraintBottom_toTopOf="@+id/iconAvgSpeed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iconAvgSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_speed"
                app:layout_constraintBottom_toTopOf="@+id/iconMaxSpeed"
                app:layout_constraintEnd_toEndOf="@+id/iconPacing"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/iconPacing"
                app:layout_constraintTop_toBottomOf="@+id/iconPacing" />

            <ImageView
                android:id="@+id/iconMaxSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_speed"
                app:layout_constraintBottom_toTopOf="@+id/iconTIme"
                app:layout_constraintEnd_toEndOf="@+id/iconPacing"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/iconPacing"
                app:layout_constraintTop_toBottomOf="@+id/iconAvgSpeed" />

            <ImageView
                android:id="@+id/iconTIme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_watch"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/iconPacing"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/iconPacing"
                app:layout_constraintTop_toBottomOf="@+id/iconMaxSpeed" />

            <TextView
                android:id="@+id/avgPacingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="00:00 min/km"
                android:textAllCaps="false"
                android:textColor="@color/text_timer"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/pacingLabel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/pacingLabel" />

            <TextView
                android:id="@+id/avgSpeedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0 km/h"
                android:textAllCaps="false"
                android:textColor="@color/text_timer"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/avgSpeedLabel"
                app:layout_constraintEnd_toEndOf="@+id/avgPacingText"
                app:layout_constraintTop_toTopOf="@+id/avgSpeedLabel" />

            <TextView
                android:id="@+id/maxSpeedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0 km/h"
                android:textAllCaps="false"
                android:textColor="@color/text_timer"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/maxSpeedLabel"
                app:layout_constraintEnd_toEndOf="@+id/avgPacingText"
                app:layout_constraintTop_toTopOf="@+id/maxSpeedLabel" />

            <TextView
                android:id="@+id/startTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11:00"
                android:textAllCaps="false"
                android:textColor="@color/text_timer"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/timeInitLabel"
                app:layout_constraintEnd_toEndOf="@+id/avgPacingText"
                app:layout_constraintTop_toTopOf="@+id/timeInitLabel" />

            <TextView
                android:id="@+id/pacingLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Average pacing"
                android:textAllCaps="false"
                android:textColor="@color/list_secondary_text"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/iconPacing"
                app:layout_constraintStart_toStartOf="@+id/guideline5"
                app:layout_constraintTop_toTopOf="@+id/iconPacing" />

            <TextView
                android:id="@+id/avgSpeedLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Average speed"
                android:textAllCaps="false"
                android:textColor="@color/list_secondary_text"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/iconAvgSpeed"
                app:layout_constraintStart_toStartOf="@+id/guideline5"
                app:layout_constraintTop_toTopOf="@+id/iconAvgSpeed" />

            <TextView
                android:id="@+id/maxSpeedLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Max speed"
                android:textAllCaps="false"
                android:textColor="@color/list_secondary_text"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/iconMaxSpeed"
                app:layout_constraintStart_toStartOf="@+id/guideline5"
                app:layout_constraintTop_toTopOf="@+id/iconMaxSpeed" />

            <TextView
                android:id="@+id/timeInitLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Start time"
                android:textAllCaps="false"
                android:textColor="@color/list_secondary_text"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/iconTIme"
                app:layout_constraintStart_toStartOf="@+id/guideline5"
                app:layout_constraintTop_toTopOf="@+id/iconTIme" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="219dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.66" />


</androidx.constraintlayout.widget.ConstraintLayout>